<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="6dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="6dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_row="0"
        android:layout_columnSpan="3"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="3dp"
        android:background="#FE6637">

        <!-- ImageView (Top Middle) -->

        <!-- TextView (Bottom) -->

        <ImageView
            android:id="@+id/category_icon1"
            android:layout_width="71dp"
            android:layout_height="140dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="32dp"
            android:scaleType="centerCrop"
            android:src="@drawable/proglang" />

        <TextView
            android:id="@+id/category_textview1"
            android:layout_width="130dp"
            android:layout_height="74dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="24dp"
            android:layout_toEndOf="@+id/category_icon1"
            android:fontFamily="sans-serif-black"
            android:padding="8dp"
            android:text="@string/it_text"
            android:textAlignment="viewStart"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/category_desc"
            android:layout_width="144dp"
            android:layout_height="99dp"
            android:layout_below="@+id/category_textview1"
            android:layout_marginStart="3dp"
            android:layout_marginTop="-2dp"
            android:layout_toEndOf="@+id/category_icon1"
            android:fontFamily="sans-serif-black"
            android:padding="3dp"
            android:text="@string/itdesc_text"
            android:textAlignment="viewStart"
            android:textColor="@color/white"
            android:textSize="12sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>